---
interface Props {
  type?: "primary" | "secondary";
}

const { type = "primary" } = Astro.props;
---

<span class:list={[type]} />

<style>
  span {
    flex: 1;
    opacity: 0.4;
    margin: 8px 0;
  }
  .primary {
    border-bottom: 2px dotted var(--black);
  }
  .secondary {
    border-bottom: 2px dotted var(--accent);
  }
</style>