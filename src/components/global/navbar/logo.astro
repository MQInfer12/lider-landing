---
import { Image } from "astro:assets";
import LogoLider from "../../../assets/images/logo.png";

interface Props {
  type?: "primary" | "secondary";
  size?: "base" | "sm";
}

const { type = "primary", size = "base" } = Astro.props;
---

<div class:list={["container", size, type]}>
  <div class="image-container">
    <Image src={LogoLider} alt="logo-lider" class="logo-image" />
  </div>
  <span>
    <h1>LIDER</h1>
    <h2>Soft <span>S.R.L.</span></h2>
  </span>
</div>

<style>
  .container {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .primary {
    color: var(--accent);
  }
  .secondary {
    color: var(--black);
  }
  .base {
    height: 100px;
  }
  .base h1 {
    font-weight: 900;
    margin-bottom: -4px;
  }
  .base h2 {
    font-weight: 300;
    display: flex;
    flex-direction: column;
  }
  .base h2 span {
    font-size: 12px;
    padding-left: 2px;
  }
  .sm {
    height: 60px;
  }
  .sm h1 {
    font-size: 1rem;
    font-weight: 900;
    margin-bottom: -2px;
  }
  .sm h2 {
    font-size: .8rem;
    font-weight: 300;
  }
  .image-container {
    height: 70%;
    aspect-ratio: 315 / 345;
  }
  .logo-image {
    width: 100%;
    height: 100%;
  }
  span {
    display: flex;
    flex-direction: column;
  }

  @media screen and (max-width: 550px) {
    .base {
      height: 60px;
    }
    .base h1 {
      font-size: 1rem;
      font-weight: 900;
      margin-bottom: -2px;
    }
    .base h2 {
      font-size: .8rem;
      font-weight: 300;
    }
  }
</style>
