---
import Text from "../../global/texts/Text.astro";
import Title from "../../global/texts/Title.astro";

interface Props {
  number: number;
  text: string;
}

const { number, text } = Astro.props;
---

<div>
  <Title text={text} type="secondary" size="sm" />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>