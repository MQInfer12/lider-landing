<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5vh var(--padding-inline) 10vh;
    gap: 40px;
  }
  span {
    width: 600px;
    max-width: 100%;
  }
  .images-container {
    width: 100%;
    display: flex;
    gap: 40px;
    margin-top: 20px;
    flex-wrap: wrap;
  }
  .image {
    flex: 1;
    min-width: 200px;
    height: 200px;
  }
  .img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .button-container {
    margin-top: 20px;
  }
</style>