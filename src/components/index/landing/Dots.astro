---
import { Image } from "astro:assets";
import Background from "../../../assets/images/landing_bg.jpg";
import DotsImg from "../../../assets/images/dots.png";
---

<section>
  <Image alt="landing-background" src={Background} class="background" />
  <div class="dots-container">
    <Image alt="dots" src={DotsImg} class="dots" />
  </div>
  <div class="opacidad"></div>
  <slot />
</section>

<style>
  section {
    height: 100svh;
    width: 100vw;
    position: relative;
    overflow: hidden;
    display: flex;
    padding-top: var(--navbar-height);
    align-items: center;
    justify-content: center;
  }
  .background {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
  .dots-container {
    position: absolute;
    inset: 0;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .dots {
    width: 150vw;
    height: 150vw;
    z-index: 10;
    opacity: 0.2;
    animation: rotateBG 60s linear infinite;
  }
  @keyframes rotateBG {
    0% {
      transform: rotate(0);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  .opacidad {
    position: absolute;
    inset: 0;
    background-color: var(--primary-950);
    opacity: 0.8;
  }
  @media screen and (max-width: 800px) {
    .dots {
      width: 240vw;
      height: 240vw;
    }
  }
</style>