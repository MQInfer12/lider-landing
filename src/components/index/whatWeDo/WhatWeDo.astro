---
import { Image } from "astro:assets";
import WhatWeDoImg from "../../../assets/images/logo.png";
import Subtitle from "../../global/texts/Subtitle.astro";
import Title from "../../global/texts/Title.astro";
import Text from "../../global/texts/Text.astro";
---

<section id="who">
  <div class="texts">
    <Subtitle text="¿Quiénes somos?" />
    <Title 
      margin="16px 0 32px"
      text="Empresa LÍDER en desarrollo de sistemas de gestión y otras aplicaciones" 
      dot
    />
    <Text animation="appear80">Lider Soft SRL es una empresa boliviana con más de 20 años de experiencia dedicada al desarrollo de soluciones tecnológicas de gestión empresarial. Nos especializamos en brindar software integral que cubre áreas críticas para las empresas, como la administración financiera, la contabilidad, la gestión de inventarios y la facturación electrónica.</Text>
  </div>
  <div class="image-container">
    <Image class="image fadeInLeft100" alt="what we do" src={WhatWeDoImg} />
  </div>
</section>

<style>
  section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 150px;
    padding: 10vh var(--padding-inline);
  }
  .texts {
    width: 400px;
    max-width: 100%;
  }
  .title {
    margin-top: 16px;
  }
  .image-container {
    width: 400px;
    height: 300px;
    max-width: 100%;
  }
  .image {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    section {
      flex-direction: column-reverse;
      gap: 40px;
    }
  }
</style>